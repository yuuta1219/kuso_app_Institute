<div class="bg-base-100 h-[90%] pt-5">
  <h2 class="text-4xl font-bold mx-4">ユーザー登録</h2>
  <%= form_with(model: @user, data: { turbo: false }, url: users_path, local: true) do |form| %>
    <div class="m-4">
      <%= form.label :name, class: "text-xl" %>
      <%= form.text_field :name, class: "mt-2 input input-bordered input-lg md:input-md w-full", placeholder: "名前を入力してください" %>
    </div>
    <div class="m-4">
      <%= form.label :email, class: "text-xl" %>
      <%= form.email_field :email, class: "mt-2 input input-bordered input-lg md:input-md w-full", placeholder: "メールアドレスを入力してください" %>
    </div>
    <div class="m-4">
      <%= form.label :password, class: "text-xl" %>
      <%= form.password_field :password, class: "mt-2 input input-bordered input-lg md:input-md w-full", placeholder: "パスワードを入力してください" %>
    </div>
    <div class="m-4">
      <%= form.label :password_confirmation, class: "text-xl" %>
      <%= form.password_field :password_confirmation, class: "mt-2 input input-bordered input-lg md:input-md w-full", placeholder: "パスワードを入力してください" %>
    </div>
    <div class="m-4">
      <%= form.submit "ユーザー登録", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="flex flex-col items-center justify-between">
    <%= link_to "ログインページへ", login_path, class: "text-blue-500 hover:text-blue-800" %>
  </div>
</div>
