<%= render 'shared/header' %>
<div class="min-h-screen pt-5 heropattern-ilikefood-gray-500">
  <div class="mx-2 border bg-base-300 heropattern-circuitboard-gray-700">
    <% if @response %>
      <div class="flex">
        <div class="chat chat-start">
          <div class="chat-image">
            <%= image_tag("Chat_bot.png", width: '100px', height: '100px') %>
          </div>
          <div class="chat-bubble"><%= @response %></div>
        </div>
      </div>
      <div class="mx-4">
          <%= link_to "https://twitter.com/share?url=#{request.base_url}&text=AI「#{@response}」&hashtags=AIcalorie", target: '_blank', class: 'mx-4 twitter-share-button', data: {show_count: 'false'} do %>
            <div class="flex"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path></svg> Twitterでシェアする！</div>
          <% end %>
        </div>
    <% else %>
      <div class="flex">
        <div class="chat chat-start">
          <div class="chat-image">
            <%= image_tag("Chat_bot.png", width: '100px', height: '100px') %>
          </div>
          <div class="chat-bubble">なんでも聞いてください。</div>
        </div>
      </div>
    <% end %>
    <div class="border-t"></div>
    <%= form_with(url: calorie_counter_chats_path, method: "get") do |f| %>
      <div class="w-full flex m-2">
        <%= text_field_tag :input, nil, class: "input input-bordered input-secondary flex-grow m-2", placeholder: "カロリーを教えてほしい食べ物を入力しよう" %>
        <%= f.submit "尋ねる", class: 'btn submit-button m-2 mr-4' %>
        </div>
    <% end %>
  </div>
  <div class="mx-2 mt-20 backdrop-blur p-2 border">
    <div class="m-2 mt-4 text-3xl border-b">カロリーカウンターAI君とのお約束</div>
    <div class="m-2 mt-4 text-xl">1. 食べ物の名前だけを入力する！</div>
    <div class="m-2 mt-4 text-xl">2. カロリーカウンターAIくんを壊そうとしない!</div>
    <div class="m-2 mt-4 text-xl border-b">3. カロリーカウンターAIくんが傷つくことを言わない!</div>
    <div class="m-2 mt-8 text-3xl">用途を守って楽しく遊んでね</div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const submitButton = document.querySelector('.submit-button');
  
  submitButton.addEventListener('click', function() {
    this.classList.add('loading');
  });
});

</script>