<script>
let body = document.getElementById('theme-body');
let toggle = document.getElementById('themeToggle');


// ページ読み込み時に保存されたテーマを復元する
window.addEventListener('DOMContentLoaded', function() {
  if (document.cookie.indexOf('selectedTheme=light') >= 0) {
    toggle.checked = true;
  } else {
    toggle.checked = false;
  }
});

// チェックボックスの状態が変わったときにテーマを切り替える
toggle.addEventListener('change', function() {
  let date = new Date();
  date.setTime(date.getTime() + (365 * 24 * 60 * 60 * 1000)); // 1年後に有効期限を設定
  let expires = "; expires=" + date.toUTCString();

  if (this.checked) {
    body.setAttribute('data-theme', 'light');
    document.cookie = 'selectedTheme=light' + expires + '; path=/'; // テーマをクッキーに保存
  } else {
    body.setAttribute('data-theme', 'night');
    document.cookie = 'selectedTheme=night' + expires + '; path=/'; // テーマをクッキーに保存
  }
});
</script>