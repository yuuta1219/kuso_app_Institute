<div class="font-aidoji min-h-screen">
  <% unless logged_in? %>
    <%= form_with url: login_path, local: true do |f| %>
      <div class="flex flex-col">
        <%= f.label :メールアドレス, class: 'my-1 text-xl' %>
        <%= f.text_field :email, class: 'my-1 input input-bordered input-secondary input-lg md:input-md w-full max-w-full' %>
        <%= f.label :パスワード, class: 'my-1 text-xl' %>
        <%= f.password_field :password, class: 'my-1 input input-bordered input-secondary input-lg md:input-md w-full max-w-full' %>
        <%= f.submit 'ログイン', class: 'btn text-gray-100 bg-gray-900 my-2' %>
      </div>
    <% end %>
  <% else %>
  <%= render @tasks %>
      <div id="error_messages"></div>
    <%= form_with model: [:aidoji, @task], local: true do |f| %>
      <div>
        <%= f.text_field :title, class: "input_area input_area-info w-full h-40 " %>
        <%= f.text_area :body, class: "textarea textarea-info w-full h-40" %>
      </div>
      <div>
        <%= f.submit '投稿する' %>
      </div>
    <% end %>
  <% end %>
</div>